doctype html
html
  head
    meta(charset='utf-8')
    title= title
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/normalize/3.0.2/normalize.css')
    link(rel='stylesheet', href='/css/style.css')
    script(src="https://code.jquery.com/jquery-2.1.3.min.js")
    script(src="/js/peer.js")
    script(src="/js/index.js")
  body
    h1= title
    div.parson#you
      h2 You
      input.peer-id#your-id(type="text", readonly="true", autofocus, tabindex="1")
      video#your-video(autoplay="true", muted="true")
      div.chat
      input.chat-input(type="text", tabindex="3")
    div.parson#partner
      h2 Partner
      input.peer-id#partner-id(type="text", value="", tabindex="2", placeholder="input partner's id")
      video#partner-video(autoplay="true")
      div.chat
      input.chat-input(type="text", disabled="true")
